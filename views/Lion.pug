extends layout

block content
  h1= title
  div(class="container-fluid")
        div(class="row")
            - let items = results
            each v,index in items
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.name} #{v.age} #{v.weight}
  script.                
        function buy(intemNo)
        {
              alert(`you purchased Item ${intemNo+1}`)
        }