  p Search results fox  
  p 
  - let items = results
   div(class="container-fluid")
    div(class="row")
      each v,index in items 
       div(class="col-sm-2" onclick=`buy(${index})`) #{v.name}
       div(class="col-sm-2" onclick=`buy(${index})`) #{v.age}
       div(class="col-sm-2" onclick=`buy(${index})`) #{v.weight}

  script.                
        function buy(intemNo)
        {
              alert(`you purchased Item ${intemNo+1}`)
        }

